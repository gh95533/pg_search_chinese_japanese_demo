<div class="form-horizontal" role="form">
  <%= form_for(@article) do |f| %>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content,:class => "form-control", :rows => "20" %>
      </div>
      <div class="field">
        <%= f.label :guid %><br>
        <%= f.text_field :guid,:class => "form-control" %>
      </div>
      <div class="field">
        <%= f.label :lang %><br>
        <%= f.text_field :lang, :class => "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Save", :class => 'btn btn-primary' %>
      </div>
  <% end %>
</div>




